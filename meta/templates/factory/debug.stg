file(clazz, params) ::= <<
$copyright()$
$body(clazz, params)$
>>

body(clazz, params) ::= <<
package $package(clazz)$;
$params: doImport()$

public class $clazz.upper$Factory {

    private final $clazz.upper$FactoryHelper helper;

    $params: field()$

    public $clazz.upper$Factory() {
        helper = new $clazz.upper$FactoryHelper();
    }

    public $clazz.upper$Factory($clazz.upper$FactoryHelper helper) {
        this.helper = helper;
    }

    $params: setter(); separator = "$\n$"$
}
>>

package(clazz) ::= "compiler.pipeline.instantiate.factory.$clazz.pkg$"

doImport(param) ::= "import $param.clazz.canonicalName$;$\n$"

setter(param) ::= <<
public void set$param.upper$($param.clazz.simpleName$ $param.lower$) {
    this.$param.lower$ = $param.lower$;
}
>>

field(param) ::= "private $param.class.simpleName$ $param.lower$;"
